page {
  background-color: #fff;
  font-family: "Helvetica Neue",
                 "Hiragino Sans GB",
                 "Microsoft YaHei",
                 "\9ED1\4F53",
                 Arial,
                 sans-serif;
  font-size: 32rpx;
}

.form-box {
  padding-left: 30rpx;
}

.form-box input {
  height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  color: #999;
}

.form-box .input-placeholder {
  color: #aaa;
}

.form-box button {
  margin: 30rpx 30rpx 0 0;
}

.nav-cell {
  -webkit-box-flex: 1;
}

.nav-cell.active {
  color: #ff4b2d;
  border-bottom: #ff4b2d 4.69rpx solid;
}

.nav-header {
  font-size: 28.12rpx;
  display: -webkit-box;
  text-align: center;
  background: #fff;
  padding: 0 16.41rpx;
  height: 100.77rpx;
  line-height: 100.77rpx;
}
